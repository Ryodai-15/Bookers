<body>
  <h1>Editing Book</h1>
    <%= form_with model:@book,local:true do |book| %>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>error
        <% @book.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
    <% end %>


    <h4>Title</h4>
      <%= book.text_field :title %>
    <h4>Body</h4>
      <%= book.text_area :body %>
      <%= book.submit 'Update Book' %>
  <% end %>
  <p>
    <%= link_to 'Show', book_path %>
    |
    <%= link_to 'Back', "/books" %>
  </p>
</body>