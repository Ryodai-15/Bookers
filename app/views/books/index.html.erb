<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>


<h1>Books</h1>
<table ="1">
  <thead>
    <tr align="center">
      <th><h2>Title</h2></th>
      <th><h2>Body</h2></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><span><%= book.title %> </span></td>
      <td><span><%= book.body %></span></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book),method: :delete,"data-confirm"=>"Are you sure?" %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<h3>New book</h3>

<%= form_with model:@book,url:books_path,local:true do |book| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
<% end %>

  <h4>Title</h4>
    <%= book.text_field :title%>
  <h4>本文</h4>
    <%= book.text_area :body%>
    <%= book.submit 'Create Book' %>

<% end %>
